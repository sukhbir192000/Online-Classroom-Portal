<link rel="stylesheet" type="text/css" href="/css/assignment_submission.css">
    
    
<div>   
    <div class="main">
        <%- include('navbar') %>


        <div id="black_screen"></div>

        <div class="main_content">
            <div class="main_data">
                <div class="subject"><%= assignment.classSub.course.name %></div>
                <div class="title_submit"> 
                    <div class="title"><%= assignment.title %></div>
                </div>
                <div class="graded"><%= assignment.weightage %> points</div>
                <div class="line"></div>
                <div class="deadline">Due on <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'short', day: '2-digit', hour: 'numeric', minute: 'numeric'}).format(assignment.deadline) %></div>
                <div class="description"><%= assignment.content %></div>
                <div class="date_posted">Posted on <%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'short', day: '2-digit', hour: 'numeric', minute: 'numeric'}).format(assignment.createdAt) %></div>
                <div class="material">
                    <% for(let file of assignment.files){ %>
                        <a href="<%= file.url %>" class="file_inside" download="download">
                            <div class="file_icon "></div>
                            <div class="file_title"><%= file.name %></div>
                        </a>
                    <% } %> 
                </div>
                
                <!-- User Submissions -->
                <div class="work_added">Submissions</div>
                <div id="submissions_container">
                    <% for(let submission of submissionList){ %>
                        <div class="submission <% if(submission.submittedAt>assignment.deadline){ %>late_submitted<% } %>">
                            <div class="submission_content">
                                <div><div><i class="fas fa-caret-right"></i></div><%= submission.postedBy.sid %></div>
                                <div><%= submission.postedBy.name %></div>
                                <div><%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'short', day: '2-digit', hour: 'numeric', minute: 'numeric'}).format(submission.submittedAt)%></div>
                            </div>
                            <div class="submission_files" >
                                <% for(let file of submission.files){ %>
                                    <a href="<%= file.url %>" class="file_inside" download="download">
                                        <div class="file_icon "></div>
                                        <div class="file_title"><%= file.name %></div>
                                    </a>
                                <% } %> 
                            </div>
                            <div class="submission_grading">
                                <form>
                                    <input type="number" min=0 max=<%= assignment.weightage %>>
                                    <textarea name="comment" id="comment" cols="30" rows="10"></textarea>
                                    <button type="submit">Grade</button>
                                </form>
                            </div>
                        </div>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>

        

    </div>

</div>
<script src="/js/view_submission.js"></script>    