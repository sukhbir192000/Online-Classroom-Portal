        <% if(title!='Login'){ %>
            <link rel="stylesheet" href="/css/layout.css">
            <link rel="stylesheet" type="text/css" href="/css/_header.css">
        <% } %>
    
        <%- style %>   
       
    </head>
    <body>
        <% if(title!='Login'){ %>
        <%- include('_header') %>
        <% } %>
        <main id="layout-main">
            <%- body %>
        </main>
        <% if(title!='Login'){ %>
            <%- include('_footer') %>
            <%- script %>
        <% } %>
        
        <script> 
              
            <% if(flash.success && flash.success.length>0){ %>    
                    
                new Noty({
                    theme:'semanticui',
                    text:"<%=flash.success%>",
                    type:'success',
                    layout:'topRight',
                    timeout:1500
                }).show();
            <% } %>
        </script>
    </body>
</html>