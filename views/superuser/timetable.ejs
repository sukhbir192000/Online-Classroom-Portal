                                <div class="det_name">Subject Code:</div>
                                <div class="class_info">xx</div>
                            </div>
                            
                            <div class="type_class dets_align">
                                <div class="det_name">Class Type:</div>
                                <div class="class_info">xx</div>
                            </div>
            
                            <div class="group_lab dets_align">
                                <div class="det_name">Lab Group:</div>
                                <div class="class_info">xx</div>
                            </div>
            
